pipeline {
    agent any

    environment {
        // SonarQube
        SONAR_HOST_URL = 'http://your-sonarqube-server:9000'
        SONAR_TOKEN = credentials('sonar-token') // Add token in Jenkins credentials
        // Docker Hub
        DOCKER_CREDENTIALS = 'dockerhub-creds'
        IMAGE_NAME = 'eklavya2117/ultimate-cicd'
        IMAGE_TAG = 'latest'
    }

    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/eklavya2117/Jenkins-CICD-Pipeline.git', branch: 'main'
                echo "Code checkout completed."
            }
        }

        stage('Build and Test') {
            agent {
                docker {
                    image 'maven:3.9.1-eclipse-temurin-17'
                    args '-u root:root' // ensure permission inside container
                }
            }
            steps {
                script {
                    // Verify Java version
                    sh 'java -version'
                    sh 'mvn -version'

                    // Build
                    sh 'mvn clean package'
                }
            }
        }

        stage('Static Code Analysis') {
            agent {
                docker {
                    image 'maven:3.9.1-eclipse-temurin-17'
                    args '-u root:root'
                }
            }
            steps {
                script {
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.host.url=$SONAR_HOST_URL \
                        -Dsonar.login=$SONAR_TOKEN \
                        -Dsonar.projectKey=spring-boot-demo
                    '''
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS}") {
                        def customImage = docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                        customImage.push()
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                script {
                    sh 'sed -i "s|image:.*|image: ${IMAGE_NAME}:${IMAGE_TAG}|g" k8s/deployment.yaml'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh 'kubectl apply -f k8s/deployment.yaml'
                    sh 'kubectl rollout status deployment spring-boot-demo'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
