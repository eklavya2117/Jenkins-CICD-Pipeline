pipeline {
  agent none

  environment {
    DOCKER_IMAGE = "eklavya2117/ultimate-cicd"
    SONAR_URL = "http://16.170.233.220:9000"
  }

  stages {

    stage('Build & Test (Maven Container)') {
      agent {
        docker {
          image 'maven:3.9.6-eclipse-temurin-17'
          reuseNode true
        }
      }
      steps {
        sh '''
          cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
          mvn clean package
        '''
      }
    }

    stage('Sonar Analysis') {
      agent {
        docker {
          image 'maven:3.9.6-eclipse-temurin-17'
          reuseNode true
        }
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            mvn sonar:sonar \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=$SONAR_URL
          '''
        }
      }
    }

    stage('Build & Push Docker Image (HOST)') {
      agent { label 'master' }   // or built-in
      steps {
        withCredentials([usernamePassword(
          credentialsId: 'docker-cred',
          usernameVariable: 'DOCKER_USER',
          passwordVariable: 'DOCKER_PASS'
        )]) {
          sh '''
            docker login -u "$DOCKER_USER" -p "$DOCKER_PASS"
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
            docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}
          '''
        }
      }
    }

    stage('Update Deployment File') {
      agent { label 'master' }
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "chauhan.pravin.7112@gmail.com"
            git config user.name "eklavya2117"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" \
              java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add .
            git commit -m "Update image tag ${BUILD_NUMBER}" || true
            git push https://${GITHUB_TOKEN}@github.com/eklavya2117/Jenkins-CICD-Pipeline.git HEAD:main
          '''
        }
      }
    }
  }
}
