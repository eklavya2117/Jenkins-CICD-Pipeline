pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "eklavya2117/ultimate-cicd:12"
        MAVEN_IMAGE = "maven:3.9.1-eclipse-temurin-17"
        JAVA_HOME = "/usr/local/openjdk-17"
        PATH = "$JAVA_HOME/bin:$PATH"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                echo "Checking out code..."
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    script {
                        // Run Maven in Docker container with Jenkins user
                        docker.image(MAVEN_IMAGE).inside("--rm -u 111:113") {
                            sh 'rm -rf target || true' // Clean previous build artifacts
                            sh 'mvn clean -Dmaven.clean.failOnError=false package'
                        }
                    }
                }
            }
        }

        stage('Static Code Analysis') {
            when {
                expression { return fileExists('sonar-project.properties') }
            }
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    script {
                        docker.image(MAVEN_IMAGE).inside("--rm -u 111:113") {
                            sh 'mvn sonar:sonar'
                        }
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    script {
                        // Use host Docker to build and push
                        sh "docker build -t ${DOCKER_IMAGE} ."
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                echo "Update your Kubernetes deployment YAML or Helm charts here..."
                // Example:
                // sh "sed -i 's|image: .*|image: ${DOCKER_IMAGE}|' k8s/deployment.yaml"
            }
        }
    }

    post {
        success {
            echo "Pipeline succeeded!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
